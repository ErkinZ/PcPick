@model PcPick.ViewModels.ProductIndexViewModel

@{
    ViewBag.Title = "Search";
}

<h2>Search result</h2>

<table class="table">
    <thead>
        <tr>
            <th>@Html.ActionLink("Name", "Search", new { search = Model.Search, sort = Model.SortOrderName })</th>
            <th>Description</th>
            <th>@Html.ActionLink("Price", "Search", new { search = Model.Search, sort = Model.SortOrderPrice })</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model.ProductList)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "ViewProduct", "Product", new { id = item.ProductId }, null)
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Price
                </td>

                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.ProductId }, new { @class = "glyphicon glyphicon-pencil" }) |
                    @Html.ActionLink(" ", "Delete", new { id = item.ProductId }, new { @class = "glyphicon glyphicon-trash" })
                </td>
            </tr>
        }
    </tbody>
</table>